{
  "manifest_version": 3,
  "name": "Paraminator",
  "version": "1.0",
  "default_locale": "en",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background_scripts/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "Paraminator@mozilla.org"
    }
  }
}